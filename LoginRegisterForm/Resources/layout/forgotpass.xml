<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/linearLayoutF1"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgrounditem"
    android:padding="@dimen/my_paddingtext">



    <ImageView
        android:id="@+id/baskinlogoF"
        android:layout_marginTop="@dimen/my_margintoplogintext"
        android:layout_width="@dimen/my_baskinimagewidth"
        android:layout_height="@dimen/my_baskinimageheight"
        android:src="@drawable/baskinlogo1" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_heightlayoutedt"
            android:layout_marginTop="@dimen/my_marginTopFedt"
            android:layout_marginLeft="@dimen/my_margintext"
            android:layout_marginRight="@dimen/my_margintext"
            android:layout_marginBottom="@dimen/my_margintext"
            android:paddingHorizontal="@dimen/my_drawablepaddingedt"
            android:gravity="center_vertical"
            android:inputType="textWebPassword"
            android:imeOptions="actionNext"
            android:drawablePadding="@dimen/my_drawablepaddingedt"
            android:id="@+id/passwordF" 
            android:background="@drawable/shape_rectangle"
            android:hint="@string/password"
            android:drawableRight="@drawable/ic_visibilityoff"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_heightlayoutedt"
            android:layout_margin="@dimen/my_margintext"
            android:drawablePadding="@dimen/my_drawablepaddingedt"
            android:paddingHorizontal="@dimen/my_drawablepaddingedt"
            android:inputType="textWebPassword"
            android:imeOptions="actionNext"
            android:gravity="center_vertical"
            android:id="@+id/newpasswordF" 
            android:background="@drawable/shape_rectangle"
            android:hint="@string/newpassword"
            android:drawableRight="@drawable/ic_visibilityoff"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_heightlayoutedt"
            android:layout_margin="@dimen/my_margintext"
            android:paddingHorizontal="@dimen/my_drawablepaddingedt"
            android:drawablePadding="@dimen/my_drawablepaddingedt"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:gravity="center_vertical"
            android:id="@+id/otpF" 
            android:background="@drawable/shape_rectangle"
            android:hint="@string/otp"/>




     <TextView
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sendotp"
        android:layout_marginTop="@dimen/my_margintopforgotpass"
        android:layout_marginRight="@dimen/my_margingrightCreateOTP"
        android:textSize="@dimen/my_textsize"
        android:layout_gravity="center"
        android:id="@+id/genrateOTPF"
        android:textStyle="bold"
        android:gravity="right"
        android:textColor="@drawable/textselector"/>



    <Button
        
        android:layout_width="@dimen/my_buttonwidthlayout"
        android:layout_height="@dimen/my_buttonheightlayout"
        android:text="@string/confirm"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/my_marginTopbutton"
        android:textSize="@dimen/my_buttontextsize"
        android:layout_gravity="center"
        android:background="@drawable/buttonshape"
        android:id="@+id/confirmbF"
        android:textColor="@color/my_white"/>


       
 
</LinearLayout>
       








   


