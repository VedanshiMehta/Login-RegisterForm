<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/linearLayoutForgotPassword"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgrounditem"
    android:padding="@dimen/size20">



    <ImageView
        android:id="@+id/imageViewBaskinLogo"
        android:layout_marginTop="@dimen/size50"
        android:layout_width="@dimen/size150"
        android:layout_height="@dimen/size100"
        android:src="@drawable/baskinlogo1" />


        <EditText
            
            android:layout_marginTop="@dimen/size80"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size60"
            android:paddingHorizontal="@dimen/size15"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:drawablePadding="@dimen/size15"
            android:id="@+id/editTextNewPassword" 
            android:background="@drawable/shape_rectangle"
            android:hint="@string/newPassword"
            android:drawableRight="@drawable/ic_visibilityoff"/>

    

        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/size15"
            android:layout_height="@dimen/size60"
            android:drawablePadding="@dimen/size15"
            android:paddingHorizontal="@dimen/size15"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:gravity="center_vertical"
            android:id="@+id/editTextConfirmPassword" 
            android:background="@drawable/shape_rectangle"
            android:hint="@string/confirmPassword"
            android:drawableRight="@drawable/ic_visibilityoff"/>

  

   

      <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/size60"
            android:layout_marginTop="@dimen/size15"
            android:paddingHorizontal="@dimen/size15"
            android:drawablePadding="@dimen/size15"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:gravity="center_vertical"
            android:id="@+id/editTextOtp" 
            android:background="@drawable/shape_rectangle"
            android:hint="@string/otp"/>




     <TextView
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sendOtp"
        android:layout_marginTop="@dimen/size5"
        android:layout_marginRight="@dimen/size8"
        android:textSize="@dimen/scale17"
        android:layout_gravity="right"
        android:id="@+id/textViewGenerateOtp"
        android:textStyle="bold"
        android:gravity="right"
        android:textColor="@drawable/textselector"/>



    <Button
        
        android:layout_width="@dimen/size220"
        android:layout_height="@dimen/size45"
        android:text="@string/confirm"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/size40"
        android:textSize="@dimen/scale20"
        android:layout_gravity="center"
        android:background="@drawable/buttonshape"
        android:id="@+id/buttonConfirm"
        android:textColor="@color/white"/>


       
 
</LinearLayout>
       








   


