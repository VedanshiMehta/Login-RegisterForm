<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/linearLayoutF1"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgrounditem"
    android:padding="10dp">



    <ImageView
        android:id="@+id/baskinlogoF"
        android:layout_marginTop="50dp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/baskinlogo1" />

   

    

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="15dp"
            android:gravity="center_vertical"
            android:inputType="textWebPassword"
            android:imeOptions="actionNext"
            android:drawablePadding="10dp"
            android:id="@+id/passwordF" 
            android:background="@drawable/shape_rectangle"
            android:hint="@string/password"
            android:drawableRight="@drawable/ic_visibilityoff"/>

    
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:drawablePadding="10dp"
            android:paddingHorizontal="15dp"
            android:inputType="textWebPassword"
            android:imeOptions="actionNext"
            android:gravity="center_vertical"
            android:id="@+id/newpasswordF" 
            android:background="@drawable/shape_rectangle"
            android:hint="@string/newpassword"
            android:drawableRight="@drawable/ic_visibilityoff"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:paddingHorizontal="15dp"
            android:drawablePadding="10dp"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:gravity="center_vertical"
            android:id="@+id/otpF" 
            android:background="@drawable/shape_rectangle"
            android:hint="@string/otp"/>




     <TextView
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sendotp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="15dp"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:id="@+id/genrateOTPF"
        android:textStyle="bold"
        android:gravity="right"
        android:textColor="@drawable/textselector"/>



    <Button
        
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:text="@string/confirm"
        android:textAllCaps="false"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:background="@drawable/buttonshape"
        android:id="@+id/confirmbF"
        android:textColor="@color/my_white"/>


       
 
</LinearLayout>
       








   


