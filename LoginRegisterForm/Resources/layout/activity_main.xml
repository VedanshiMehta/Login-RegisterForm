<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/linearLayoutLoginPage1"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgrounditem"
    android:padding="@dimen/size20">    

  

        <TextView
            android:id="@+id/textViewLogin"
            android:text="@string/login"
            android:layout_marginTop="@dimen/size50"
            android:padding="@dimen/size10"
            android:textSize="@dimen/scale50"
            android:textColor="@color/darkBlue"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/linearLayoutLoginPage2"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/size10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewAccountQuestion"
                android:text="@string/accQuestion"
                android:textSize="@dimen/scale16"
                android:textColor="@color/darkGrey"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textViewCreateAccount"
                android:text="@string/createAccount"
                android:layout_marginLeft="@dimen/size5"
                android:textSize="@dimen/scale17"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="@color/pink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        
        <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/size60"
                android:layout_marginTop="@dimen/size90"
                android:gravity="center_vertical"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:paddingHorizontal="@dimen/size15"
                android:drawablePadding="@dimen/size15"
                android:id="@+id/editTextUserName"
                android:background="@drawable/shape_rectangle"
                android:hint="@string/userName"
                android:drawableLeft="@drawable/ic_user"/>
        
        <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/size60"
                android:layout_marginTop="@dimen/size15"
                android:drawablePadding="@dimen/size15"
                android:paddingHorizontal="@dimen/size15"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:gravity="center_vertical"
                android:id="@+id/editTextPassword"
                android:background="@drawable/shape_rectangle"
                android:hint="@string/password"
                android:drawableLeft="@drawable/ic_password"/>
    

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgotPassword"
            android:layout_marginTop="@dimen/size5"
            android:layout_marginRight="@dimen/size8"
            android:textSize="@dimen/scale17"
            android:id="@+id/textViewForgotPassword"
            android:layout_gravity="right"
            android:textColor="@drawable/textselector"/>

        <Button
            android:layout_width="@dimen/size220"
            android:layout_height="@dimen/size45"
            android:text="@string/login"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/size40"
            android:textSize="@dimen/scale20"
            android:layout_gravity="center"
            android:background="@drawable/buttonshape"
            android:id="@+id/buttonLogin"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loginOption"
            android:layout_marginTop="@dimen/size40"
            android:gravity=" center"
            android:textSize="@dimen/scale17"
            android:textStyle="bold"
            android:id="@+id/textloginoptionL"
            android:textColor="@color/darkGrey"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayoutLoginPage3"
            android:gravity="center"
            android:layout_marginTop="@dimen/size10"
            android:padding="@dimen/size10">

            <ImageView
                android:layout_width="@dimen/size50"
                android:layout_height="@dimen/size50"
                android:id="@+id/imageViewfacebook"
                android:src="@drawable/facebook"/>

            <ImageView
                android:layout_width="@dimen/size50"
                android:layout_height="@dimen/size50"
                android:id="@+id/imageViewGoogle"
                android:layout_marginLeft="@dimen/size20"
                android:src="@drawable/google1"/>


        </LinearLayout>

</LinearLayout>




   

