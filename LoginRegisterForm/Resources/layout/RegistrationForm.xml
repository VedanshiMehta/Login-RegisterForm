<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/linearLayoutR1"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgrounditem"
    android:padding="@dimen/my_paddingvalue">

   
      <TextView
          android:id="@+id/texRegister"
          android:text="@string/register"
          android:layout_marginTop="@dimen/my_margintoplogintext"
          android:padding="@dimen/my_paddingtext"
          android:textSize="@dimen/my_registertextsize"
          android:textStyle="bold"
          android:textColor="@color/my_darkblue"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

      <LinearLayout
            android:id="@+id/linearLayoutR2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/my_margintext"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/accountquestionR"
                android:text="@string/accquestion" 
                android:textSize="@dimen/my_textsize"
                android:textColor="@color/my_darkgray"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/createaccounttextR"
                android:text="@string/createaccount"
                android:layout_marginLeft="@dimen/my_margincatext"  
                android:textSize="@dimen/my_catextsize"
                android:fontFamily="sans-serif"
                android:textColor="@color/my_lightpink"    
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

       </LinearLayout>



      <EditText
         android:layout_width="match_parent"
         android:layout_height="@dimen/my_heightlayoutedt"
         android:layout_marginTop="@dimen/my_margintoplogintext"
         android:layout_marginLeft="@dimen/my_margintext"
         android:layout_marginRight="@dimen/my_margintext"
         android:layout_marginBottom="@dimen/my_marginedt"
         android:paddingHorizontal="@dimen/my_drawablepaddingedt"
         android:gravity="center_vertical"
         android:inputType="text"
         android:imeOptions="actionNext"
         android:drawablePadding="@dimen/my_drawablepaddingedt"
         android:id="@+id/userR" 
         android:background="@drawable/shape_rectangle"
         android:hint="@string/user"
         android:drawableLeft="@drawable/ic_user"/>

    
      <EditText
         android:layout_width="match_parent"
         android:layout_height="@dimen/my_heightlayoutedt"
         android:layout_margin="@dimen/my_marginedt"
         android:paddingHorizontal="@dimen/my_drawablepaddingedt"
         android:drawablePadding="@dimen/my_drawablepaddingedt"
         android:inputType="textEmailAddress"
         android:imeOptions="actionNext"
         android:gravity="center_vertical"
         android:id="@+id/emailaddressR" 
         android:background="@drawable/shape_rectangle"
         android:hint="@string/email"
         android:drawableLeft="@drawable/ic_email"/>

      <EditText
         android:layout_width="match_parent"
         android:layout_height="@dimen/my_heightlayoutedt"
         android:layout_margin="@dimen/my_marginedt"
         android:paddingHorizontal="@dimen/my_drawablepaddingedt"
         android:drawablePadding="@dimen/my_drawablepaddingedt"
         android:inputType="text"
         android:imeOptions="actionNext"
         android:gravity="center_vertical"
         android:id="@+id/usernameR" 
         android:background="@drawable/shape_rectangle"
         android:hint="@string/username"
         android:drawableLeft="@drawable/ic_user"/>

      <EditText
          android:layout_width="match_parent"
          android:layout_height="@dimen/my_heightlayoutedt"
          android:layout_margin="@dimen/my_marginedt"
          android:paddingHorizontal="@dimen/my_drawablepaddingedt"
          android:inputType="textPassword"
          android:imeOptions="actionDone"
          android:drawablePadding="@dimen/my_drawablepaddingedt"
          android:gravity="center_vertical"
          android:id="@+id/passwordR" 
          android:background="@drawable/shape_rectangle"
          android:hint="@string/password"
          android:drawableLeft="@drawable/ic_password"/>


      <Button
         android:layout_width="@dimen/my_buttonwidthlayout"
        android:layout_height="@dimen/my_buttonheightlayout"
        android:text="@string/register"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        android:textSize="@dimen/my_buttontextsize"
        android:layout_gravity="center"
        android:background="@drawable/buttonshape"
        android:id="@+id/registerbuttonR"
        android:textColor="@color/my_white"/>

     <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/registeroption"
        android:layout_marginTop="@dimen/my_maringTopregisterbtton"
        android:gravity=" center"
        android:textSize="@dimen/my_textsize"
        android:textStyle="bold"
        android:textColor="@color/my_darkgray"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout4"
        android:gravity="center"
        android:layout_marginTop="@dimen/my_margintext"
        android:padding="@dimen/my_paddingtext">

        <ImageView
            android:layout_width="@dimen/my_imageSize"
            android:layout_height="@dimen/my_imageSize"
            android:id="@+id/facebookIR"
            android:src="@drawable/facebook"/>

        <ImageView
            android:layout_width="@dimen/my_imageSize"
            android:layout_height="@dimen/my_imageSize"
            android:id="@+id/googleIR"
            android:layout_marginLeft="@dimen/my_margingLeftImage"
            android:src="@drawable/google1"/>


    </LinearLayout>


</LinearLayout>




   


