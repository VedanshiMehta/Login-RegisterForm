<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/linearLayoutR1"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgrounditem"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/linearR2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="50dp"
        android:padding="10dp"
        android:orientation="vertical">

      <TextView
          android:id="@+id/texRegister"
          android:text="Register"
          android:textSize="40dp"
          android:textStyle="bold"
            android:textColor="#000060"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/linearR3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
            android:id="@+id/txtViewR1"
            android:text="Don't have an account?" 
            android:textSize="16dp"
            android:textColor="#3d3d3d"
            android:fontFamily="sans-serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

            <TextView
            android:id="@+id/txtViewR2"
            android:text="Create your account"
            android:layout_marginLeft="5dp"  
            android:textSize="17dp"
            android:fontFamily="sans-serif"
            android:textColor="#FD49A0"    
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        </LinearLayout>
     </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearR4"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:paddingHorizontal="15dp"
            android:gravity="center_vertical"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:drawablePadding="15dp"
            android:id="@+id/editTextR1" 
            android:background="@drawable/shape_rectangle"
            android:hint="Enter User Name"
            android:drawableLeft="@drawable/ic_user"/>

    
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:paddingHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="15dp"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            android:gravity="center_vertical"
            android:id="@+id/editTextR2" 
            android:background="@drawable/shape_rectangle"
            android:hint="Enter Email Address"
            android:drawableLeft="@drawable/ic_email"/>

       <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:paddingHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:inputType="textWebEditText"
            android:imeOptions="actionNext"
            android:gravity="center_vertical"
            android:id="@+id/editTextR3" 
            android:background="@drawable/shape_rectangle"
            android:hint="Enter Username"
            android:drawableLeft="@drawable/ic_user"/>

         <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:paddingHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:inputType="textWebPassword"
            android:imeOptions="actionDone"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:id="@+id/editTextR4" 
            android:background="@drawable/shape_rectangle"
            android:hint="Enter Password"
            android:drawableLeft="@drawable/ic_password"/>

    </LinearLayout>

    <Button
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:text="Register"
        android:textAllCaps="false"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:background="@drawable/buttonshape"
        android:id="@+id/registerbutton"
        android:textColor="#ffffff"/>

     <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Or Register With"
        android:layout_marginTop="30dp"
        android:gravity=" center"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#3d3d3d"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout5"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/facebookRI"
            android:src="@drawable/facebook"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/googleRI"
            android:layout_marginLeft="20dp"
            android:src="@drawable/google1"/>


    </LinearLayout>


</LinearLayout>




   


