<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/linearLayoutRegisterPage1"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgrounditem"
    android:padding="@dimen/size20">

   
      <TextView
          android:id="@+id/textRegister"
          android:text="@string/register"
          android:layout_marginTop="@dimen/size50"
          android:padding="@dimen/size10"
          android:textSize="@dimen/scale40"
          android:textStyle="bold"
          android:textColor="@color/darkBlue"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

      <LinearLayout
            android:id="@+id/linearLayoutRegisterPage2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/size10"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewAccountQuestionRegister"
                android:text="@string/accQuestion" 
                android:textSize="@dimen/scale16"
                android:textColor="@color/darkGrey"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textViewCreateAccountRegister"
                android:text="@string/createAccount"
                android:layout_marginLeft="@dimen/size10"  
                android:textSize="@dimen/scale17"
                android:fontFamily="sans-serif"
                android:textColor="@color/pink"    
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

       </LinearLayout>



      <EditText
         android:layout_width="match_parent"
         android:layout_height="@dimen/size60"
         android:layout_marginTop="@dimen/size50"
         android:paddingHorizontal="@dimen/size15"
         android:gravity="center_vertical"
         android:inputType="text"
         android:imeOptions="actionNext"
         android:drawablePadding="@dimen/size15"
         android:id="@+id/editTextUser" 
         android:background="@drawable/shape_rectangle"
         android:hint="@string/user"
         android:drawableLeft="@drawable/ic_user"/>

    
      <EditText
         android:layout_width="match_parent"
         android:layout_height="@dimen/size60"
         android:layout_marginTop="@dimen/size15"
         android:paddingHorizontal="@dimen/size15"
         android:drawablePadding="@dimen/size15"
         android:inputType="textEmailAddress"
         android:imeOptions="actionNext"
         android:gravity="center_vertical"
         android:id="@+id/editTextEmailAddress" 
         android:background="@drawable/shape_rectangle"
         android:hint="@string/email"
         android:drawableLeft="@drawable/ic_email"/>

      <EditText
         android:layout_width="match_parent"
         android:layout_height="@dimen/size60"
         android:layout_marginTop="@dimen/size15"
         android:paddingHorizontal="@dimen/size15"
         android:drawablePadding="@dimen/size15"
         android:inputType="text"
         android:imeOptions="actionNext"
         android:gravity="center_vertical"
         android:id="@+id/editTextUserNameRegister" 
         android:background="@drawable/shape_rectangle"
         android:hint="@string/userName"
         android:drawableLeft="@drawable/ic_user"/>

      <EditText
          android:layout_width="match_parent"
          android:layout_height="@dimen/size60"
          android:layout_marginTop="@dimen/size15"
          android:paddingHorizontal="@dimen/size15"
          android:inputType="textPassword"
          android:imeOptions="actionDone"
          android:drawablePadding="@dimen/size15"
          android:gravity="center_vertical"
          android:id="@+id/editTextPasswordRegister" 
          android:background="@drawable/shape_rectangle"
          android:hint="@string/password"
          android:drawableLeft="@drawable/ic_password"/>


      <Button
         android:layout_width="@dimen/size220"
        android:layout_height="@dimen/size45"
        android:text="@string/register"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/size30"
        android:textSize="@dimen/scale20"
        android:layout_gravity="center"
        android:background="@drawable/buttonshape"
        android:id="@+id/buttonRegister"
        android:textColor="@color/white"/>

     <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/registerOption"
        android:id="@+id/textViewRegisterOption"
        android:layout_marginTop="@dimen/size40"
        android:gravity=" center"
        android:textSize="@dimen/scale17"
        android:textStyle="bold"
        android:textColor="@color/darkGrey"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayoutRegisterPage3"
        android:gravity="center"
        android:layout_marginTop="@dimen/size10"
        android:padding="@dimen/size10">

        <ImageView
            android:layout_width="@dimen/size50"
            android:layout_height="@dimen/size50"
            android:id="@+id/imageViewFacebookRegister"
            android:src="@drawable/facebook"/>

        <ImageView
            android:layout_width="@dimen/size50"
            android:layout_height="@dimen/size50"
            android:id="@+id/imageViewGoogleRegister"
            android:layout_marginLeft="@dimen/size20"
            android:src="@drawable/google1"/>


    </LinearLayout>


</LinearLayout>




   


