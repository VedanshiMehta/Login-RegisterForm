<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_enabled="true" 
		android:state_pressed="true" >

		<shape  android:shape="rectangle">

			<padding android:left="@dimen/my_paddingshape"
					  android:right="@dimen/my_paddingshape"
					  android:top="@dimen/my_paddingshape"
					  android:bottom="@dimen/my_paddingshape" />

			<corners android:radius="@dimen/my_cornerRadius"/>

			<solid android:color="@color/my_oxfordblue" />

			<stroke android:color="@color/my_oxfordblue"
					android:width="@dimen/my_strokesize"/>
		</shape>
	</item>
	<item android:state_enabled="true" android:state_pressed="false" >


		<shape  android:shape="rectangle">

			<padding android:left="@dimen/my_paddingshape"
						android:right="@dimen/my_paddingshape"
						android:top="@dimen/my_paddingshape"
						android:bottom="@dimen/my_paddingshape" />

			<corners android:radius="@dimen/my_cornerRadius"/>

			<solid android:color="@color/my_bluebutton" />

			<stroke android:color="@color/my_bluebutton"
					android:width="@dimen/my_strokesize"/>
		</shape>
	</item>
	




</selector>




			
	
	

	
